; EditorConfig is awesome: http://EditorConfig.org

; top-most EditorConfig file
root = true

; tab indentation
[*.html]
indent_style = tab
indent_size = 4

[*.php]
indent_style = tab
indent_size = 4

[*.js]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4

; Markdown Space Indentation
[*.md]
indent_style = tab
indent_size = 4

; YAML
[*.yaml]
indent_style = space
indent_size = 2

; YAML
[*.yml]
indent_style = space
indent_size = 2